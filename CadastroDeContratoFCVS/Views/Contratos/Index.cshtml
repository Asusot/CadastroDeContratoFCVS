@model IEnumerable<CadastroDeContratoFCVS.Models.Contrato>

@{
    ViewData["Title"] = "Index";
}

<h1>Indice</h1>

<p> 
    <a asp-action="Create" class="btn btn-success"> Cadastrar Novo Contrato</a>
</p>
<div class="row mb-3">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Buscar por Nome do Cliente ou Número do Contrato" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Buscar</button>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroContrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorContrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAssinatura)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroContrato)
            </td>
                @{
                    var culture = new System.Globalization.CultureInfo("pt-BR");
                    var numberFormat = culture.NumberFormat;
                    var formattedValue = item.ValorContrato.ToString("C", numberFormat);
                }
                <td>
                    @formattedValue
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAssinatura)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" class="btn btn-dark" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
